{
  "endOfLine": "lf",
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["swift/apple/*.md", "website/**/*.md", "website/**/*.mdx"],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": [
        "website/src/app/blog/**/*.md",
        "website/src/app/blog/**/*.mdx"
      ],
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
